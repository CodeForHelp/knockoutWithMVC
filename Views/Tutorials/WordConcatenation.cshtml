@{
    ViewBag.Title = "Word Concatenation";
}

<style type="text/css">
    
    body { font-family: arial; font-size: 14px; }
    .wrapper { padding: 1em; background-color: #EEEEDD; border: 1px solid #CCC; max-width: 655px; }
    .wrapper input { font-family: Arial; }
    .wrapper b { font-weight: bold; }
    .wrapper p { margin-top: 0.9em; margin-bottom: 0.9em; }
    .wrapper select[multiple] { width: 100%; height: 8em; }
    .wrapper h2 { margin-top: 0.4em; font-weight: bold; font-size: 1.2em; }

</style>

<h2>@ViewBag.Title</h2>

<br />

<div class='wrapper'>   
    <p>First name: <input data-bind='value: txtFirstName' /></p> 
    <p>Last name: <input data-bind='value: txtLastName' /></p> 
    <h2>Hello, <span data-bind='text: txtFullName'> </span>!</h2>  
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/ViewModel/WordConcatenation.js")
}